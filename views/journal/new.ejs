<% include ../partials/header %>

<div class="container">
    <h1>Start a new journal</h1>
    <div class="row">
        <div class="col-md-12">
            <form method="POST" action="/journal">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="journal[title]"
                        placeholder="Today was another successfull day!">
                </div>
                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea class="form-control" id="content" rows="3" name="journa[description]"
                    placeholder="I would like to share my little success with you..."></textarea>
                </div>
                <div class="custom-control custom-checkbox my-1 mr-sm-2">
                    <input class="custom-control-input" type="checkbox" id="private" value="true">
                    <label class="custom-control-label" for="private" name="journal[private]">
                        Post this blog as private (visible to your friends only) 
                    </label>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-inline">Submit</button>
                    <button class="btn btn-lg btn-info btn-inline">Save draft</button>    
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>