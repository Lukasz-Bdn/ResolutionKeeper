<% include ../partials/header %>

<div class="container">
    <h1>Start a new journal</h1>
    <div class="row">
        <div class="col-md-12">
            <form method="POST" action="/journals/<%= journal._id %>?_method=PUT">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="journal[title]"
                        value="<%= journal.title %>">
                </div>
                <div class="form-group">
                    <label for="content">Short description</label>
                    <textarea class="form-control" id="content" rows="6" name="journal[description]"
                    ><%= journal.description %></textarea>
                </div>
                <div class="custom-control custom-checkbox my-1 mr-sm-2">
                    <input class="custom-control-input" type="checkbox" id="formPrivate" 
                        name="formPrivate" <% if(journal.private) { %> checked <% } %> >
                    <label class="custom-control-label" for="formPrivate">
                        Post this journal as private (visible only to people you select) 
                    </label>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-inline">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>