<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
                <div class="jumbotron">
                    <h1 class="display-4">Create new journal</h1>
                    <p class="lead">Start recording your progress</p>
                    <hr class="my-4">
                    <p>
                        Journal is not only a blog-like feature to record your progress. It can be linked to your personal claendar, statistics etc. You can share it with selected few or make it public.
                    </p>
                    <p class="lead">
                    <a class="btn btn-info btn-lg" href="/journals/new" role="button">Create</a>
                    </p>
                </div>
        </div>
    </div>
    <div class="row">
        <% userJournals.forEach(function(journal) { %>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Created: <%= journal.created.toDateString() %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= journal.title %></h5>
                        <p class="card-text"><%= journal.description %></p>
                        <a href="/journals/<%= journal.id %>" class="btn btn-info">Open</a>
                        <a href="/journals/<%= journal.id %>/edit" class="btn btn-info">Edit</a>
                        <a href="/journals/<%= journal.id %>/delete" class="btn btn-warning">Delete</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>